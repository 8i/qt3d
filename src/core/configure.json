{
    "module": "3dcore",
    "testDir": "../../config.tests",

    "commandline": {
        "options": {
            "assimp": { "type": "enum", "values": [ "qt", "system", "no" ] },
            "bullet": { "type": "enum", "values": [ "qt", "system", "no" ] },
            "qt3d-profile-jobs": "boolean",
            "qt3d-profile-gl": "boolean"
        }
    },

    "libraries": {
        "assimp": {
            "label": "Assimp",
            "test": "assimp",
            "sources": [
                { "type": "pkgConfig", "args": "assimp > 3.3.1" },
                "-lassimp"
            ]
        },
        "bullet": {
            "label": "Bullet",
            "test": "bullet",
            "disable": "input.bullet == 'no'",
            "sources": [
                { "type": "pkgConfig", "args": "bullet" },
                "-lbullet"
            ]
        }
    },

    "features": {
        "assimp": {
            "label": "Assimp",
            "output": [ "privateFeature", "feature" ]
        },
        "system-assimp": {
            "label": "System Assimp",
            "enable": "input.assimp == 'system'",
            "disable": "input.assimp == 'qt'",
            "condition": "features.assimp && libs.assimp",
            "output": [ "privateFeature" ]
        },
        "bullet": {
            "label": "Bullet",
            "output": [ "privateFeature", "feature" ]
        },
        "system-bullet": {
            "label": "System Bullet",
            "enable": "input.bullet == 'system'",
            "disable": "input.bullet == 'qt'",
            "condition": "features.bullet && libs.bullet",
            "output": [ "privateFeature" ]
        },
        "qt3d-profile-jobs": {
            "label": "Output Qt3D Job traces",
            "autoDetect": false,
            "output": [
                "privateFeature",
                { "type": "define", "name": "QT3D_JOBS_RUN_STATS", "value": 1 }
            ]
        },
        "qt3d-profile-gl": {
            "label": "Output Qt3D GL traces",
            "autoDetect": false,
            "output": [
                "privateFeature",
                { "type": "define", "name": "QT3D_OPENGL_RUN_STATS", "value": 1 }
            ]
        }
    },

    "report": [
    ],

    "summary": [
        {
            "section": "Qt 3D",
            "entries": [
                "assimp",
                "system-assimp",
                "bullet",
                "system-bullet",
                "qt3d-profile-jobs",
                "qt3d-profile-gl"
            ]
        }
    ]
}
