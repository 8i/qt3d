{
    "module": "3dcore",
    "testDir": "../../config.tests",

    "commandline": {
        "options": {
            "assimp": { "type": "enum", "values": [ "qt", "system" ] },
            "bullet": { "type": "enum", "values": [ "qt", "system", "no" ] }
        }
    },

    "libraries": {
        "assimp": {
            "label": "Assimp",
            "test": "assimp",
            "sources": [
                { "type": "pkgConfig", "args": "assimp" },
                "-lassimp"
            ]
        },
        "bullet": {
            "label": "Bullet",
            "test": "bullet",
            "disable": "input.bullet == 'no'",
            "sources": [
                { "type": "pkgConfig", "args": "bullet" },
                "-lbullet"
            ]
        }
    },

    "features": {
        "assimp": {
            "label": "Assimp",
            "output": [ "privateFeature", "feature" ]
        },
        "system-assimp": {
            "label": "System Assimp",
            "enable": "input.assimp == 'system'",
            "disable": "input.assimp == 'qt'",
            "condition": "features.assimp && libs.assimp",
            "output": [ "privateFeature" ]
        },
        "bullet": {
            "label": "Bullet",
            "output": [ "privateFeature", "feature" ]
        },
        "system-bullet": {
            "label": "System Bullet",
            "enable": "input.bullet == 'system'",
            "disable": "input.bullet == 'qt'",
            "condition": "features.bullet && libs.bullet",
            "output": [ "privateFeature" ]
        }
    },

    "report": [
    ],

    "summary": [
        {
            "section": "Qt 3D",
            "entries": [
                "assimp",
                "system-assimp",
                "bullet",
                "system-bullet"
            ]
        }
    ]
}
